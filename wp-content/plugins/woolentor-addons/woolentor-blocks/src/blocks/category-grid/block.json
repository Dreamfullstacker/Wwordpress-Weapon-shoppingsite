{
	"name": "woolentor/category-grid",
    "category": "woolentor-blocks",
    "attributes": {
        "blockUniqId":{
            "type": "string",
            "default": ""
        },
        "style":{
            "type": "string",
            "default": "1"
        },
        "displayType":{
            "type": "string",
            "default": "allCat"
        },
        "productCategory":{
            "type": "string"
        },
        "productCategories":{
            "type": "array",
            "default": []
        },
        "order":{
            "type": "string",
            "default": "asc"
        },
        "displayLimit":{
            "type": "number",
            "default": 6
        },
        "showCount":{
            "type": "boolean",
            "default": true
        },
        "imageSize":{
            "type": "string",
            "default": "full"
        },
        "sliderOn":{
            "type": "boolean",
            "default": false
        },
        "slitems":{
            "type": "number",
            "default": 3
        },
        "slarrows":{
            "type": "boolean",
            "default": true
        },
        "sldots":{
            "type": "boolean",
            "default": false
        },
        "slpauseOnHover":{
            "type": "boolean",
            "default": true
        },
        "slIsrtl":{
            "type": "boolean",
            "default": false
        },
        "slautolay":{
            "type": "boolean",
            "default": false
        },
        "slautoplaySpeed":{
            "type": "number",
            "default": 3000
        },
        "slanimationSpeed":{
            "type": "number",
            "default": 300
        },
        "slscrollItem":{
            "type": "number",
            "default": 3
        },
        "sltabletDisplayColumns":{
            "type": "number",
            "default": 2
        },
        "sltabletScrollColumns":{
            "type": "number",
            "default": 2
        },
        "sltabletWidth":{
            "type": "number",
            "default": 750
        },
        "slMobileDisplayColumns":{
            "type": "number",
            "default": 1
        },
        "slMobileScrollColumns":{
            "type": "number",
            "default": 1
        },
        "slMobileWidth":{
            "type": "number",
            "default": 480
        },
        "columns": {
            "type": "object",
            "default": {
                "desktop": 3
            }
        },
        "noGutter":{
            "type": "boolean",
            "default": false
        },
        "itemSpace":{
            "type": "number",
            "default": 15
        },
        "areaPadding": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            }
        },
        "areaBackgroundColor":{
            "type":"string"
        },
        "imageBoxColor":{
            "type":"string",
            "selector":".ht-category-wrap .ht-category-image a.ht-category-border::before"
        },
        "imageMargin": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            },
            "selector": ".ht-category-wrap .ht-category-image"
        },
        "imageBorderRadius": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            },
            "selector": ".ht-category-wrap .ht-category-image"
        },
        "titleColor":{
            "type":"string",
            "selector":".ht-category-wrap .ht-category-content h3 a"
        },
        "titleHoverColor":{
            "type":"string",
            "selector":".ht-category-wrap .ht-category-content h3 a:hover"
        },
        "titleMargin": {
            "type": "object",
            "default": {
                "top":"",
                "right":"",
                "bottom":"",
                "left":"",
                "unit":"px",
                "link":"yes"
            },
            "selector": ".ht-category-wrap .ht-category-content h3"
        },
        "countColor":{
            "type":"string"
        },
        "countBeforeColor":{
            "type":"string"
        }
    }
}